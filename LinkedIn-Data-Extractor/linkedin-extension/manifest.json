{
  "manifest_version": 3,
  "name": "LinkedIn Bulk Scraper Demo",
  "version": "1.0",
  "description": "Open LinkedIn profiles and post scraped data to local API",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["https://www.linkedin.com/*", "http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["contentScript.js"]
    }
  ]
}
